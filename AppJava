package application;

import java.util.Scanner;
import entities.Aviao;
import entities.Navio;
import entities.Transporte;

public class AppJava {
    public static void main(String[] args) {
        // Cria um vetor único de Transporte com 4 posições.
        Transporte[] veiculos = new Transporte[4];
        
        // Cria um único objeto Scanner para todas as entradas de dados.
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("--- Cadastro de 2 Avioes ---");
        // Loop para criar e preencher os 2 objetos Aviao nas posições 0 e 1.
        for (int i = 0; i < 2; i++) {
            System.out.println("\nCadastro do Aviao #" + (i + 1) + ":");
            veiculos[i] = new Aviao(); // Usa o construtor vazio.
            veiculos[i].entrada(scanner); // Chama o método de entrada.
        }
        
        System.out.println("\n--- Cadastro de 2 Navios ---");
        // Loop para criar e preencher os 2 objetos Navio nas posições 2 e 3.
        for (int i = 0; i < 2; i++) {
            System.out.println("\nCadastro do Navio #" + (i + 1) + ":");
            veiculos[i + 2] = new Navio(); // Usa o construtor vazio.
            veiculos[i + 2].entrada(scanner); // Chama o método de entrada.
        }

        System.out.println("\n--- Exibindo todos os Veiculos Cadastrados ---");
        // Loop para exibir os dados de todos os 4 objetos.
     // Cria contadores separados para cada tipo de veículo
        int contadorAviao = 0;
        int contadorNavio = 0;

        for (int i = 0; i < veiculos.length; i++) {
            // Verifica o tipo do objeto e usa o contador correto
            if (veiculos[i] instanceof Aviao) {
                contadorAviao++; // Incrementa o contador de avião
                System.out.println("--- Dados do Aviao #" + contadorAviao + " ---");
            } else if (veiculos[i] instanceof Navio) {
                contadorNavio++; // Incrementa o contador de navio
                System.out.println("--- Dados do Navio #" + contadorNavio + " ---");
            }
            
            veiculos[i].imprimir();
            System.out.println();
        }
        scanner.close(); // Fecha o Scanner para liberar os recursos.
    }
}
